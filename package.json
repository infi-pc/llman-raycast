{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "llman",
  "title": "LLMan",
  "description": "LLMan - Raycast extension",
  "icon": "command-icon.png",
  "author": "michael_vp",
  "license": "MIT",
  "commands": [
    {
      "name": "llman",
      "title": "Transform text with LLMan",
      "description": "",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "openai_api_key",
      "title": "OpenAI API Key",
      "description": "Your OpenAI API key",
      "type": "textfield",
      "defaultValue": ""
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.51.1",
    "openai": "^3.2.1",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
